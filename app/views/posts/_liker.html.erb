<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag liker.profile_picture.attached? ? liker.profile_picture : 'profile_picture.jpg', class:"img-thumbnail rounded-circle ", style: "width: 2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold" style="overflow: hidden; text-overflow: ellipsis; white-space:nowrap max-width:10rem;">
      <%= link_to liker, class:"a-decoration-none", data: {turbo:false} do  %>
        <%= liker.username %>
      <% end %>
      </small>
    </div>
  </div>

  <%= render 'layouts/shared/follow_state', user: liker%>
</div>
