<div class="container home-sections d-flex flex-row justify-content-center align-items-center">
  <div class="login-section ">
    <div class="card text-center pt-5 p-4" style="width: 25rem;">
    <%= image_tag 'logo.png', class: 'card-img-top' %>
    <p class="w-75 fs-6 fw-bold text-secondary align-self-center mt-2">Sign in to see photos and videos of your friends.</p>
    <a href="#" class="d-block mt-4 text-decoration-none fw-bold bg-primary text-white rounded w-75 align-self-center p-1">
          <%= image_tag 'facebook.png', class: 'facebook' %>
          Log in with facebook
        </a>
      <div class="d-flex align-items-center mt-4">
        <div class="line"></div>
        <div class="line-text">OR</div>
        <div class="line"></div>
      </div>

      <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <div class="mb-3 mt-4">
          <%= f.email_field :email, class:"form-control", placeholder:"Phone number or email" %>
        </div>
        <div class="mb-3 mt-4">
          <%= f.text_field :full_name, class:"form-control", placeholder:"Full name" %>
        </div>
        <div class="mb-3 mt-4">
          <%= f.text_field :username, class:"form-control", placeholder:"Username" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class:"form-control", placeholder:"Password" %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation,  class:"form-control", placeholder:"Password confirmation" %>
        </div>
        <p class="text-secondary fs-6">People who use our service may have uploaded your contact information to Instagram. More information</p>
        <p class="text-secondary fs-6">By registering, you accept our Conditions, the Privacy Policy and the Cookies Policy.</p>
        <%= f.submit "Sign up", class:"btn btn-primary d-block w-100" %>
      <% end %>

        <% if notice %>
        <p class="notice"><%= notice %></p>
        <% elsif alert %>
        <p class="alert"><%= alert %></p>
        <% end %>
      </div>
    </div>

    <div class="card text-center py-2 mt-3 " style="width: 23rem;">
      <div class="card-text">
      Have an account?
        <%= link_to 'Sign in', new_user_session_path, class:"fs-6 my-4 text-decoration-none" %>
      </div>
    </div>
  </div>
</div>
