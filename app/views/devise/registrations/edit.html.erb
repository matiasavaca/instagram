<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="container w-75 d-flex flex-row my-3 ps-0">
    <div class="w-25 d-flex flex-column border-end">
      <a href="#" class="active p-3 profile-edit-btn">
        Edit profile
      </a>
    </div>

    <div class="w-50 ms-5 d-flex flex-column p-4">
      <div class="d-flex align-items-center">
        <%= image_tag resource.profile_picture.attached? ? resource.profile_picture : 'profile_picture.jpg', class: "img-thumbnail rounded-circle", style: "width:3rem; max-height:3rem"  %>
        <div class="d-flex flex-column mx-3 jutify-content-center">
          <small class="fw-bold"style="overflow: hidden; text-overflow: ellipsis; white-space:nowwrap; width:10rem"><%= resource.username %></small>
          <%= f.file_field :profile_picture, class: "form-control form-control-sm" %>
        </div>
        <div class="form-check">
          <%= f.check_box :private, value: true, class: "form-check-input" %>
          <%= f.label :private_account, class: "form-check-label fw-bold" %>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :full_name, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.text_field :full_name, placeholder: "Full name",autofocus: true,class: "form-control" %>
          <small class="text-muted">La edici칩n de enlaces solo est치 disponible en dispositivos m칩viles. Visita la app de Instagram y edita tu perfil para cambiar los sitios web de tu presentaci칩n.</small>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :username, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.text_field :username, placeholder: "Username",autofocus: true,class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :bio, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.text_field :bio, placeholder: "Bio",autofocus: true,class: "form-control" %>
        </div>
      </div>


      <div class="row mb-3 mt-3">
        <%= f.label :email, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.text_field :email, placeholder: "Email",autofocus: true,class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :phone_number, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.text_field :phone_number, placeholder: "Phone number",autofocus: true,class: "form-control" %>
        </div>
      </div>


      <div class="row mb-3 mt-3">
        <%= f.label :new_password, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.password_field :password, placeholder: "New password",autofocus: true,class: "form-control" %>
          <small class="text-muted"> Leave it blank if you don't want to change it.</small>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :new_password_confirmation, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.password_field :password_confirmation, placeholder: "New password confirmation",autofocus: true,class: "form-control" %>
        </div>
      </div>

      <div class="row mb-3 mt-3">
        <%= f.label :current_password, class: "col-sm-4 col-form-label fw-bold" %>
        <div class="col-sm-8 ">
          <%= f.password_field :current_password, placeholder: "Current password",autofocus: true,class: "form-control" %>
          <small class="text-muted">Current password required to submit</small>
        </div>
      </div>

      <div class="d-flex mb-2 justify-content-center">
        <%= f.submit "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>
