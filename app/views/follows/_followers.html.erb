<div class="d-flex justify-content-between">
  <div class="d-flex">
    <%= image_tag followers.profile_picture.attached? ? followers.profile_picture : 'profile_picture.jpg', class:"img-thumbnail rounded-circle ", style: "width: 2.5rem" %>
    <div class="d-flex flex-column mx-3 justify-content-center">
      <small class="fw-bold" style="overflow: hidden; text-overflow: ellipsis; white-space:nowrap max-width:10rem;">
      <%= link_to followers, class:"a-decoration-none", data: {turbo:false} do  %>
        <%= followers.username %>
      <% end %>
      </small>
    </div>
  </div>
  <%= render 'layouts/shared/follow_state', user: followers%>
</div>
