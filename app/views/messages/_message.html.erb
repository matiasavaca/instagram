<div class="cont-<%=message.user.id%> text-white">
  <div class="message-box msg-<%= message.user.id %>">
      <h6 class="name"> <%= message.user.email %> </h6>
    <div class="pb-2">
      <%= message.body %>
    </div>
    <span class="message-time"><%= time_ago_in_words(message.created_at).gsub('about ', '') %></span>
  </div>
</div>
