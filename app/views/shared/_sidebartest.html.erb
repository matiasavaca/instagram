
<div class="d-flex flex-column align-items-start px-3 pt-2 text-white min-vh-100">
  <div class="p-4 mb-4">
    <%= link_to root_path, class:"navbar-brand" do %>
      <%= image_tag 'logo.png', width: '100rem' %>
    <% end %>
  </div>

  <div class="btn-group-vertical w-100" role="group" aria-label="Vertical button group">
    <%= link_to root_path, class:"text-dark btn d-flex align-items-center" do %>
      <i class="fa-solid fa-house fa-xl ms-2"></i>
      <span class="ms-3">Inicio</span>
    <% end %>

    <%= link_to rooms_path, class:"text-dark btn d-flex align-items-center" do %>
      <i class="fa-brands fa-facebook-messenger fa-xl ms-2"></i>
      <span class="ms-3">Mensajes</span>
    <% end %>

    <button class="btn text-dark d-flex align-items-center" type="button" data-bs-toggle="modal" data-bs-target="#newPostModal">
      <i class="fa-solid fa-square-plus fa-xl ms-2"></i>
      <span class="ms-3">Crear</span>
    </button>

    <%= link_to rooms_path, class:"text-dark btn d-flex align-items-center" do %>
      <i class="fa-regular fa-compass fa-xl ms-2"></i>
      <span class="ms-3">Explorar</span>
    <% end %>

    <button class="btn d-flex align-items-center" type="button" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="fa-regular fa-heart fa-xl ms-2" style="color: #000000;"></i>
      <span class="ms-3">Buscar</span>
      <div class="btn-group dropstart">
        <ul class="dropdown-menu p-4">
        <%= turbo_stream_from "follows_list" %>
        <div id="navbar_follow">
          <% current_user.follow_requests.each do |follow_req| %>
            <% if follow_req.followed == current_user && !follow_req.follower.private? %>
              <%= render 'follows/follow', follow: follow_req %>
            <% end %>
          <% end %>
        </div>
        </ul>
      </div>
    </button>

    <%= link_to user_path(current_user), class:"text-dark btn d-flex align-items-center" do %>
      <%= image_tag current_user.profile_picture.attached? ? current_user.profile_picture : 'profile_picture.jpg', class:"img-thumbnail rounded-circle ms-2", style: "max-width: 2.5rem; max-height: 2rem" %>
      <span class="ms-3">Perfil</span>
    <% end %>
  </div>
    <ul class="dropdown flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
    </ul>
      <div class="dropdown">
        <a class="" type="button" data-bs-toggle="dropdown" aria-expanded="false">
          <%= image_tag current_user.profile_picture.attached? ? current_user.profile_picture : 'profile_picture.jpg', class:"img-thumbnail rounded-circle ", style: "max-width: 2.5rem; max-height: 2.5rem" %>
          </a>
        <ul class="dropdown-menu">
          <li>
            <%= link_to 'Profile', user_path(current_user),class:"dropdown-item" %>
          </li>
          <li>
            <%= link_to 'Settings', edit_user_registration_path,class:"dropdown-item" %>
          </li>
          <li>
            <%= button_to 'Log out', destroy_user_session_path,class:"dropdown-item", method: :delete %>
          </li>
        </ul>
      </div>
    </div>
  </div>
<%= render 'posts/form', post: Post.new %>
</div>
