<div class="body-room">
  <div id="chatroom_container" class="row ">
    <div id="side_panel" class="col-md-4 col-sm-4">
      <h5><%= current_user.email %></h5>

      <h4>Users</h4>
      <%= turbo_stream_from "users"%>
      <div id="users">
        <%= render @users, user: current_user %>
      </div>

      <h5>Groups</h5>
      <%= turbo_stream_from "rooms"%>
      <div id="rooms">
        <%= render @rooms, user: current_user %>
      </div>
      <%= render 'rooms/new_room' %>
    </div>
    <div id="room_container" class="col-md-8 col-sm-8">
      <% if @single_room %>
        <div id="single_room">
          <h4 class="text-center text-white"> <%= @user&.email || @single_room.name %></h4>
          <%= turbo_stream_from @single_room %>
            <div id="messages">
              <%= render @messages %>
            </div>
          <%= render 'messages/new_message_form' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
